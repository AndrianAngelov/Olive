@model Olive.Data.Ingredient

@{
    ViewBag.Title = "Delete";
}

<section id="deleteSourceFormContainer">
    @using (Ajax.BeginForm("Delete", null, new AjaxOptions
    {
        HttpMethod = "Post",
        OnFailure = "ingredientPostFailure",
        OnSuccess = "successDeleteIngredient"
    }, new { id = "deleteIngredientForm", @class = "administrationEditDialogForm" }))
    {
        <div class="form-group">
            <label for="ingredientName" class="control-label">Име:</label>
            <span >
                @Html.DisplayFor(model => model.Name)
            </span>
        </div>
        <div class="updateDeteleBtnContainer">
            <input class="deleteBtn" type="submit" value="Изтрий" />
        </div>
    }
</section>
